{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": false,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["bun", "vitest/globals"]
	},
	"include": ["src", "tests"]
}
